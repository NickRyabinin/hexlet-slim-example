<form action="/users" method="post">
  <div>
    <label>
        Nickname:
      <input type="text" name="user[nickname]">
    </label>
  </div>
  <div>
    <label>
      Email:
      <input type="email" required name="user[email]">
    </label>
  </div>
  <input type="submit" value="Submit">
</form>
